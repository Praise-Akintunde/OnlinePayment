<!-- Welcome Section -->
<h2>Welcome, <%= user.username.charAt(0).toUpperCase() + user.username.slice(1) %></h2>
 
<!-- Cards Section -->
<h3>Your Cards</h3> 
<% if (cards && cards.length > 0) { %>
  <% cards.forEach((card) => { %>
    <div class="card-box">
      <p><strong>Type:</strong> <%= card.card_type %></p>
      <p><strong>Number:</strong> **** **** **** <%= card.card_number.slice(-4) %></p>
      <p><strong>Bank:</strong> <%= card.bank_name %></p>
    </div>
  <% }); %>
<% } else { %>
  <p>No cards available</p>
<% } %>

<!-- Expiry Reminder Section -->
<h3>Expiry Reminders</h3>
<% if (reminders && reminders.length > 0) { %>
  <% reminders.forEach(rem => { %>
    <div class="reminder-box">
      <p><strong>Service:</strong> <%= rem.service_name %></p>
      <p><strong>Price:</strong> â‚¦<%= rem.price %></p>
      <p><strong>Expires:</strong> <%= rem.expiry_date %></p>
    </div>
  <% }); %>
<% } else { %>
  <p>No upcoming expiries</p>
<% } %>
